
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
   
    <div style="width:100%;color:darkblue;font-weight:bold">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid" style="margin-right:100px;width:100%">
                <a class="navbar-brand" href="#">RAJAGIRI REGIONAL HOSPITAL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav justify-content-center navbar-nav me-auto mb-2 mb-lg-2  ">
                        <li class="nav-item" style="width:150px;color:darkblue;margin-left:250px">

                            @Html.ActionLink("PROFILE", "Profile", "Doctor", new { @class = "nav-link active" })
                        </li>

                        <li class="nav-item" style="width:150px">

                            @Html.ActionLink("PATIENTS", "Patients", "Doctor", new { @class = "nav-link active" })
                        </li>
                        <li class="nav-item" style="width:150px">

                            @Html.ActionLink("APPOINTMENTS", "Appointments", "Doctor", new { @class = "nav-link active" })
                        </li>
                        &nbsp;&nbsp;    &nbsp;&nbsp;    &nbsp;&nbsp;    &nbsp;&nbsp;
                        <li class="nav-item">

                            @Html.ActionLink("LOGOUT", "Login", "HomePage", new { @class = "nav-link active" })
                        </li>
                    </ul>

                </div>
            </div>

        </nav>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>





